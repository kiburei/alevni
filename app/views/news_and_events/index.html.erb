<p id="notice"><%= notice %></p>

<h1>News And Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_and_events.each do |news_and_event| %>
      <tr>
        <td><%= news_and_event.title %></td>
        <td><%= news_and_event.post %></td>
        <td><%= link_to 'Show', news_and_event, class: 'btn btn-info' %></td>
        <% if current_user.supervisor_role || current_user.superadmin_role %>
          <td><%= link_to 'Edit', edit_news_and_event_path(news_and_event), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', news_and_event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.supervisor_role || current_user.superadmin_role %>
  <%= link_to 'New News And Event', new_news_and_event_path, class: 'btn btn-info' %>
<% end %>
